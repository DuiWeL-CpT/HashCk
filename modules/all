curl https://www.nitrxgen.net/md5db/$hsh
read -p "Press Any Key To Return"
echo "[Bruteforce Methods]"
python hashjack.py --hash $ --wordlist Numb.txt
hold=' '
printf "Press 'SPACE' to continue or 'CTRL+C' to exit : "
tty_state=$(stty -g)
stty -icanon
until [ -z "${hold#$in}" ] ; do
    in=$(dd bs=1 count=1 </dev/tty 2>/dev/null)
done
stty "$tty_state"
python hashjack.py --hash $ --wordlist bigword.txt
read -p "press any Key To Return"


